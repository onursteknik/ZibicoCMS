
@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">
                        Blog Bölümü
                    </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <form method="post" action="">
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Başlık <span class="help"> -  Örn: "Yeni Ürün Denemelerimiz"</span></label>
                                <input type="text" class="form-control" name="BlogTitle" placeholder="Blog Bölümü Başlığınız" value="@Html.GetSettingValue("BlogTitle")">
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Açıklama</label>
                                <textarea type="text" class="form-control" rows="3" name="BlogDescription" id="BlogDescription" placeholder="Blog Bölümü Açıklamanız">@Html.GetSettingValue("BlogDescription")</textarea>
                                <small>Not: Bu alana blog bölümünün açıklamasını HTML kodları da kullanarak girebilirsiniz.</small>
                            </div>

                            <button type="submit" class="btn btn-success mr-10">Kaydet</button>
                            @if (ViewBag.CallbackMessage != null)
    {
                        <div class="alert alert-warning mt-25">@ViewBag.CallbackMessage</div>
}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>