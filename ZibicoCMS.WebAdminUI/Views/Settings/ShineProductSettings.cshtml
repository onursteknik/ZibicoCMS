
@{
    ViewBag.Title = "Öne Çıkan Ürün";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">
                        Öne Çıkan Ürün Bölümü
                    </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <form method="post" action="">
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Ürün Seçimi</label>
                                <select class="form-control select2" name="ShineProductID">
                                    @foreach (Products item in ViewBag.Products)
                                    {
                                        if (Helper.Settings.GetValue("ShineProductID") == item.ID.ToString())
                                        {
                                            <option selected value="@item.ID">@item.ProductName</option>
                                            continue;
                                        }
                                        <option value="@item.ID">@item.ProductName</option>

                                    }
                                </select>
                                <small>Not: Bu alanda seçeceğiniz ürün,anasayfada "Öne Çıkan Ürün" kısmında gösterilecektir.</small>
                            </div>

                            <button type="submit" class="btn btn-success mr-10">Kaydet</button>
                            @if (ViewBag.CallbackMessage != null)
                            {
                                <div class="alert alert-warning mt-25">@ViewBag.CallbackMessage</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>