
@{
    ViewBag.Title = "Mesai Saatleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">
                        Mesai Saatleri
                    </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <form method="post" action="">
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Başlık <span class="help"> -  Örn: "Bizi Bu Saatlerde Ziyaret Edebilirsin"</span></label>
                                <input type="text" class="form-control" name="OpeningHoursTitle" placeholder="Başlık" value="@Html.GetSettingValue("OpeningHoursTitle")">
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Hafta içi <span class="help"> -  Örn: "<b>PAZARTESİ - CUMA | 10:00 - 23:00</b>" şeklinde yazınız.</span></label>
                                <input type="text" class="form-control" name="OpeningHoursWeekdays" placeholder="Blog Bölümü Başlığınız" value="@Html.GetSettingValue("OpeningHoursWeekdays")">
                                <small>Not: Yukarıda belirtilen şablona uygun girilmeyen içerik sorunlara neden olabilir.</small>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Hafta sonu <span class="help"> -  Örn: "<b>CUMARTESİ - PAZAR | 10:00 - 24:00</b>" şeklinde yazınız.</span></label>
                                <input type="text" class="form-control" name="OpeningHoursWeekend" placeholder="Blog Bölümü Başlığınız" value="@Html.GetSettingValue("OpeningHoursWeekend")">
                                <small>Not: Yukarıda belirtilen şablona uygun girilmeyen içerik sorunlara neden olabilir.</small>
                            </div>
                            <button type="submit" class="btn btn-success mr-10">Kaydet</button>
                            @if (ViewBag.CallbackMessage != null)
                            {
                                <div class="alert alert-warning mt-25">@ViewBag.CallbackMessage</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

