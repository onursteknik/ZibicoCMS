
@{
    ViewBag.Title = "Foto Galeri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">
                        Foto Galeri Bölümü
                    </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <form method="post" action="">
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Başlık <span class="help"> -  Örn: "Ürün Fotoğraflarımız"</span></label>
                                <input type="text" class="form-control" name="GalleryTitle" placeholder="Foto Galeri Bölümünün Başlığını Belirleyin" value="@Html.GetSettingValue("GalleryTitle")">
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Açıklama</label>
                                <textarea type="text" class="form-control" rows="3" name="GalleryDescription" id="GalleryDescription" placeholder="Foto Galeri Bölümü Açıklamanız">@Html.GetSettingValue("GalleryDescription")</textarea>
                                <small>Not: Bu alana fotogaleri bölümünün açıklamasını HTML kodları da kullanarak girebilirsiniz.</small>
                            </div>

                            <button type="submit" class="btn btn-success mr-10">Kaydet</button>
                            @if (ViewBag.CallbackMessage != null)
                            {
                                <div class="alert alert-warning mt-25">@ViewBag.CallbackMessage</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
