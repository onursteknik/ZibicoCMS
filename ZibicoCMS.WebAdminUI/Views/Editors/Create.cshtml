
@{
    ViewBag.Title = "Editör İşlemleri";
}
@model Editors

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">
                        Editör Ekle/Güncelle
                    </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <form method="post" enctype="multipart/form-data" action="">
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Ad Soyad</label>
                                <input class="form-control" placeholder="Editör Adı" type="text" name="Firstname" id="Firstname" value="@if (Model!=null) { @Html.Raw(Model.Firstname)}" />
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Ad Soyad</label>
                                <input class="form-control" placeholder="Editör Soyadı" type="text" name="Lastname" id="Lastname" value="@if (Model!=null) { @Html.Raw(Model.Lastname)}" />
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Rol</label>
                                <input class="form-control" placeholder="Parola" type="password" name="Password" id="Password" value="" />
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Email</label>
                                <input class="form-control" placeholder="Email" type="email" name="Email" id="Email" value="@if (Model!=null) { @Html.Raw(Model.Email)}" />
                            </div>
                            @if (Model != null)
    {
                        <div class="form-group">
                            <label class="control-label mb-10 text-left">Güncel Fotoğraf</label>
                            <div class="input-group image-preview">
                                <a href="#" class="thumbnail">
                                    <img src="@Model.ImageURL" width="400" />
                                </a>

                            </div>
                        </div>
}
                        <div class="form-group">
                            <label class="control-label mb-10 text-left">Editör Fotoğrafı</label>
                            <div class="input-group image-preview">
                                <input type="text" class="form-control image-preview-filename" disabled="disabled">
                                <span class="input-group-btn">
                                    <div class="btn btn-default image-preview-input">
                                        <i class="fa fa-folder-open"></i>
                                        <i class="image-preview-input-title">Seçin</i>
                                        <input type="file" accept="image/png, image/jpeg, image/gif" name="ImageURL" />
                                    </div>
                                </span>
                            </div>
                            <small>Not: Yükleyeceğiniz fotoğraf boyutu 350x350 olmalıdır.</small>
                        </div>
                        <div class="form-group">
                            <label class="control-label mb-10 text-left">Adres</label>
                            @Html.TextAreaFor(x => x.HomeAddress, new { @class = "form-control", @rows = 10 })
                        </div>
                        <div class="form-group">
                            <label class="control-label mb-10 text-left">Tanım <span class="help"> -  Örn: "Müdür Yardımcısı"</span></label>
                            @Html.TextAreaFor(x => x.StaffDescription, new { @class = "form-control", @rows = 10 })
                        </div>

                            <button type="submit" class="btn btn-success mr-10">Kaydet</button>
                            @if (ViewBag.MessageFail != null)
    {
                        <div class="alert alert-danger mt-25">@ViewBag.MessageFail</div>
}
                            @if (ViewBag.Message != null)
    {
                        <div class="alert alert-success mt-25">@ViewBag.Message</div>
}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>