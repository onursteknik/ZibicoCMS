
@{
    ViewBag.Title = "Sosyal Medya Ayarları";
}
@model SocialMedia
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">
                        @Model.PlatformName
                    </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <div class="form-wrap">
                        <form method="post" enctype="multipart/form-data" action="">

                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Hesap Adı</label>
                                @Html.TextBoxFor(x => x.AccountName, new { @class = "form-control", @placeholder = "Hesap adınızı girin", @type = "text" })
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-10 text-left">Hesap Linki</label>
                                @Html.TextBoxFor(x => x.AccountURL, new { @class = "form-control", @placeholder = "Hesap liniki girin", @type = "text" })
                            </div>

                            <button type="submit" class="btn btn-success mr-10">Kaydet</button>
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success mt-25">@ViewBag.Message</div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

