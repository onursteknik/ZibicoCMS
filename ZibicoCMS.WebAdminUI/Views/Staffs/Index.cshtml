
@{
    ViewBag.Title = "Çalışan Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model  List<Staffs>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default card-view">
            <div class="panel-heading">
                <div class="pull-left">
                    <h6 class="panel-title txt-dark">
                        Çalışan Listesi
                    </h6>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
                <div class="panel-body">
                    <a class="btn btn-success" href="/Staffs/Create" data-toggle="tooltip" title="Yeni"><i class="zmdi zmdi-account-add"></i> Yeni Çalışan Ekle</a>
                    <div class="table-wrap">
                        @if (Request.QueryString["Status"] == "DeleteSuccess")
    {
                    <div class="alert alert-warning mt-25">Çalışan bilgisi başarıyla silindi.</div>
}
                        <div class="table-responsive">
                            <table id="staffTable" class="table table-hover display  pb-30">
                                <thead>
                                    <tr>
                                        <th>İsim</th>
                                        <th>Rol</th>
                                        <th>Sıra No</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>İsim</th>
                                        <th>Rol</th>
                                        <th>Sıra No</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (Staffs item in Model)
                {
                    <tr>
                        <td>@item.StaffName</td>
                        <td>@item.StaffRole</td>
                        <td>@item.StaffOrderNumber</td>
                        <td>
                            <a class="btn btn-default btn-xs" href="/Staffs/Create?ID=@item.ID" data-toggle="tooltip" title="Detay"><i class="zmdi zmdi-search"></i> Detay</a>
                            <a class="btn btn-danger btn-xs" href="/Staffs/Delete/?ID=@item.ID" data-toggle="tooltip" title="Sil"><i class="zmdi zmdi-delete"></i> Sil</a>
                        </td>
                    </tr>
}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

